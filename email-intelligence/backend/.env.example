# Preferred (namespaced) settings for this backend
EMAIL_INTEL_DATABASE_URL=postgresql://email:email@localhost:5432/email_intelligence
EMAIL_INTEL_QDRANT_HOST=localhost
EMAIL_INTEL_QDRANT_PORT=6333

# Gmail OAuth (local/dev)
EMAIL_INTEL_GMAIL_CREDENTIALS_PATH=credentials.json
EMAIL_INTEL_GMAIL_TOKEN_PATH=token.json
EMAIL_INTEL_GMAIL_USER_ID=me

# OAuth UX controls (useful for Gmail label sync which requires gmail.modify scope)
# EMAIL_INTEL_GMAIL_ALLOW_INTERACTIVE=true
# EMAIL_INTEL_GMAIL_AUTH_MODE=local_server

# Google Calendar integration (optional)
# NOTE: Use a separate token file to avoid scope conflicts with Gmail.
# EMAIL_INTEL_CALENDAR_ID=primary
# EMAIL_INTEL_CALENDAR_CREDENTIALS_PATH=credentials.json
# EMAIL_INTEL_CALENDAR_TOKEN_PATH=calendar_token.json
# EMAIL_INTEL_CALENDAR_ALLOW_INTERACTIVE=true
# EMAIL_INTEL_CALENDAR_AUTH_MODE=local_server
# EMAIL_INTEL_CALENDAR_DEFAULT_TIMEZONE=Europe/London

# Clustering/labeling
EMAIL_INTEL_SIMILARITY_THRESHOLD=0.85
EMAIL_INTEL_LABEL_VERSION=tier1-v1

# Maintenance defaults
# EMAIL_INTEL_INBOX_CLEANUP_DAYS=14
# EMAIL_INTEL_MAINTENANCE_LABEL_THRESHOLD=200
# EMAIL_INTEL_MAINTENANCE_FALLBACK_DAYS=30

# Optional local LLM
# EMAIL_INTEL_OLLAMA_HOST=http://localhost:11434
# EMAIL_INTEL_OLLAMA_MODEL=llama3.1

# Embeddings (recommended)
# Use a dedicated embedding model. Default in code is all-minilm (384 dims).
# Ensure it's installed locally: `ollama pull all-minilm`
# EMAIL_INTEL_EMBEDDING_MODEL=all-minilm

# Safety valve (not recommended): allow deterministic dummy vectors if Ollama isn't available.
# EMAIL_INTEL_ALLOW_DETERMINISTIC_VECTORS=false

# Backward-compatible (supported, but not preferred)
# DATABASE_URL=postgresql://email:email@localhost:5432/email_intelligence
# QDRANT_HOST=localhost
# QDRANT_PORT=6333
